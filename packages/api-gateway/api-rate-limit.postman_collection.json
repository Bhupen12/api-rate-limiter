                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminP@ss123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}/auth/login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "try {",
                  "  var json = pm.response.json();",
                  "  if (json && json.token) {",
                  "    // set environment token for subsequent requests",
                  "    pm.environment.set(\"token\", json.token);",
                  "    pm.collectionVariables.set(\"token\", json.token);",
                  "  }",
                  "  pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                  "} catch (e) {",
                  "  console.log('Login script error', e);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": [
            {
              "name": "Login - Example Success",
              "originalRequest": {},
              "status": "OK",
              "code": 200,
