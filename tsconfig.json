{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo/shared": ["packages/shared/src/index.ts"],
      "@monorepo/shared/*": ["packages/shared/src/*"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "references": [
    {
      "path": "./packages/api-gateway"
    },
    {
      "path": "./packages/shared"
    }
  ],
  "exclude": ["node_modules", "dist"]
}
